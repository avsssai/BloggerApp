<% include ../partials/header %>

<div class="ui container segment">
    <div class="ui dividing header">
        Edit the Blog : <%= blog.title %>
    </div>
    <form class="ui form" action="/home/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name="title" value="<%= blog.title %>">
        </div>
    
        <div class="field">
            <label for="author">Author</label>
            <input type="text" name="author" value="<%= blog.author %>">
        </div>
    
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name="image" value="<%= blog.image %>">
        </div>
    
        <div class="field">
            <label for="body">Body</label>
            <textarea name="body" id="body" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
    
        <button class="ui basic black button" type="submit">Update</button>
        <a class="ui basic black button" href="/home/<%= blog._id %>">Back</a>
    </form>
    
</div>

<% include ../partials/footer %>
